<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite" thread-count="2" parallel="tests">
    <test  name="using chrome" >
        <parameter name="BROWSER" value="chrome"/>
        <classes>
            <class name="com.practice.TestNgOrder"/>
            <class name="com.practice.TestNgPriority"/>
            <class name="com.practice.TestNgLogin"/>
        </classes>
    </test>
    <test  name="using edge" >
        <parameter name="BROWSER" value="edge"/>
        <classes>
            <class name="com.practice.TestNgOrder"/>
            <class name="com.practice.TestNgPriority"/>
            <class name="com.practice.TestNgLogin"/>
        </classes>
    </test>
</suite>